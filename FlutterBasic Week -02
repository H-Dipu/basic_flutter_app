        builder: (BuildContext context) {
          return Expanded(
              child: AlertDialog(
            title: const Text("Alert!!"),
            content: const Text("Do you want to Delete"),
            actions: [
              TextButton(
                  onPressed: () {
                    MySnackBar("Delete Successfully", context);
                    Navigator.of(context).pop();
                  },
                  child: const Text("Yes")),
              TextButton(
                  onPressed: () {
                    Navigator.of(context).pop();
                  },
                  child: const Text("No"))
            ],
          ));
        });
  }

